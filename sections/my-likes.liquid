<script src="{{ "my-likes.js" | asset_url }}" defer="defer"></script>
<script src="{{ "my-like-button.js" | asset_url }}" defer="defer"></script>

{% schema %}
  {
    "name": "t:sections.my-likes.name",
    "class": "page-width px-4 my-16",
    "enabled_on": {
      "templates": ["page"]
    },
    "limit": 1,
    "settings": [
      {
        "type": "header",
        "content": "t:sections.my-likes.headings.full.content"
      },
      {
        "type": "header",
        "content": "t:sections.my-likes.headings.empty.content"
      },
      {
        "type": "richtext",
        "id": "empty_text",
        "label": "t:sections.my-likes.settings.empty_text.label",
        "info": "t:sections.my-likes.settings.empty_text.info"
      }
    ],
    "presets": [
      {
        "name": "t:sections.my-likes.name"
      }
    ]
  }
{% endschema %}
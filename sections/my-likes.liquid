
{% liquid
  assign first_product = collections.all.products.first
%}

<my-likes data-price-format="{{ first_product.price | money }}">
  <template>
    <ul data-id="{{ section.id }}" class="product-grid">
      <anime-product-card>
        <li id="{{ first_product.id }}" class="relative group h-full">
          {% render 'card-product'
            , product: first_product
            , show_secondary_image: false
            , lazy_load: false
            , section_id: section.id
          %}
        </li>
      </anime-product-card>
    </ul>
  </template>
</my-likes>
<div class="flex justify-center my-40">
  {% render 'tw-loading-hand' %}
</div>

<div>
  <svg
    aria-hidden="true"
    width="60"
    focusable="false"
    role="presentation"
    viewBox="0 0 66 66"
    xmlns="http://www.w3.org/2000/svg"
    opacity="0.3">
    <circle
      fill="none"
      stroke-width="6"
      cx="33"
      cy="33"
      r="30"></circle>
  </svg>
</div>


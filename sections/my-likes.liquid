<my-likes data-currency="{{ cart.currency.symbol }}">
  <template>
    <nav role="navigation">
      <ul data-id="{{ section.id }}" class="grid sm:grid-cols-2 gap-3 lg:grid-cols-3 pb-3 mb-14">
        <li id="{{ product.id }}" class="relative group border-main border-1 h-full">
          {% render 'card-product',
            product: product,
            show_secondary_image: section.settings.show_secondary_image,
            lazy_load: false,
            section_id: section.id,
          %}
        </li>
      </ul>
    </nav>
  </template>
</my-likes>
<div class="flex justify-center my-40">
  {% render 'tw-loading-hand' %}
</div>

